<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <!--
 MPD XML Starter code Semester B Session 2018 2019
-->
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/heading"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="Great British Earthquakes"
                android:textAlignment="center"
                android:textSize="23sp" />

            <Button
                android:id="@+id/refreshButton"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/listOfEarthquakes"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:text="Refresh Data" />

            <ListView
                android:id="@+id/listOfEarthquakes"
                android:layout_width="wrap_content"
                android:layout_height="385dp"
                android:layout_below="@id/heading"

                android:layout_marginTop="0dp" />

            <TextView
                android:id="@+id/credit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/refreshButton"
                android:text="Contains British Geological Survey materials Â©NERC 2019"
                android:textSize="18sp" />

            <Button
                android:id="@+id/monthSelectButton"
                android:layout_width="172dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/listOfEarthquakes"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:text="Filter Month" />

            <Button
                android:id="@+id/backButton"
                android:layout_width="124dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/listOfEarthquakes"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="0dp"
                android:text="Back" />

            <Button
                android:id="@+id/marchSelect"
                android:layout_width="116dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/listOfEarthquakes"
                android:layout_alignStart="@+id/monthSelectButton"
                android:layout_marginTop="0dp"
                android:text="March" />

            <Button
                android:id="@+id/februarySelect"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/listOfEarthquakes"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="0dp"
                android:text="February" />

        </RelativeLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>